<h1>クラブ作成</h1>

<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= "#{@club.errors.count}個のエラーが有ります。" %>
      </div>
      <ul>
        <% @club.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name, maxlength: '50' %>

  <%= f.label :description %>
  <%= f.text_area :description, maxlength: '500' %>

  <%= f.submit '作成する' %>
<% end %>
