<div>クラブ名: <%= @club.name %></div>
<div>説明: <%= @club.description %></div>

<% if current_user.owner?(@club) %>
  <div>
    <%= link_to 'クラブ情報を編集する', edit_club_path(@club) %>
  </div>
  <div>
    <%= turbo_frame_tag 'invitation-urls' do %>
      <%= button_to 'メンバー招待用URLを発行する', club_invitations_path(@club), method: :post, class: 'anchor-link '%>
    <% end %>
  </div>
<% end %>

<h3>参加者</h3>
<div>オーナー: <%= link_to "#{ @owner.nickname }", @owner %></div>
<div><%= "メンバー（#{ @members.size }人）:" %></div>
<% @members.each do |member| %>
  <ul>
    <li>
      <%= link_to "#{ member.nickname }", member %>
      <% if current_user.owner?(@club) %>
        <%= button_to 'クラブから退会させる', resign_member_club_path(@club, user_id: member.id), method: :delete, class: 'anchor-link '%>
      <% end %>
    </li>
  </ul>
<% end %>
