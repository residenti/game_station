<div id="invitation-container" class="container is-max-desktop">
  <!-- TODO リファクタリング  views/clubs/new.html.erb と重複 -->
  <% if @invitation.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= "#{@invitation.errors.count}個のエラーが有ります。" %>
      </div>
      <ul>
        <% @invitation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div id="invitation-card" class="card club-card">
    <div class="club-card-info">
      <p class="title is-5 mb-1 has-text-white"><%= @club.name %></p>
      <small class="subtitle is-7 has-text-white"><%= @club.users.count %>人</small>
    </div>
    <div class="card-image">
      <figure class="image is-5by3">
        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div id="invitation-content">
        <figure class="image is-64x64 mb-3">
          <%= image_tag @club.owner.profile_icon_url, class: 'is-rounded' %>
        </figure>
        <small>招待者</small>
        <p class="title is-6">@<%= @club.owner.nickname %></p>
        <%= button_to 'クラブに参加する', accept_club_invitation_path(@club, @invitation.token), class: 'button is-primary mb-4' %>
      </div>
    </div>
  </div>
</div>

