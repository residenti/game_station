<div class="container is-max-desktop">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <%= image_tag @user.profile_icon_url, class: 'is-rounded' %>
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= @user.name %></p>
          <p class="subtitle is-6">@<%= @user.nickname %></p>
        </div>
      </div>
    </div>
    <div class="card-content">
      <p class="title is-5">参加中のクラブ一覧</p>
      <div class="columns is-flex-wrap-wrap">
        <% @user.clubs.each do |club| %>
          <div class="column is-half">
            <%= link_to(club_path(club), class: 'list-content') do %>
              <div class="card club-card">
                <div class="club-card-info">
                  <p class="title is-5 mb-1 has-text-white"><%= club.name %></p>
                  <small class="subtitle is-7 has-text-white"><%= club.users.count %>人</small>
                </div>
                <div class="card-image">
                  <figure class="image is-2by1">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Placeholder image">
                  </figure>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
